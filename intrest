import java.util.Scanner;
public class Exam
{
    public static void main(String args[])
    {
        Scanner input=new Scanner(System.in);
        int p=input.nextInt();
        int y=input.nextInt();
        char c=input.next().charAt(0);
        double intrest;
        if(c=='y')
        {
            intrest=(p*y*0.12)/100;
            System.out.println(intrest);
        }
        else
        {
            intrest=(p*y*0.1);
            System.out.print(intrest);
        }
    }
}
